            <HBox.margin>
                <Insets bottom="5.0" right="5.0" />
            </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" text="Cancel" onAction="#cancelCreation">
            <HBox.margin>
                <Insets bottom="5.0" right="5.0" />
            </HBox.margin>
        </Button>
    </HBox>
